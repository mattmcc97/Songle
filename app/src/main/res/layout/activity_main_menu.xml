<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.songle.MainMenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:stateListAnimator="@null"
        android:elevation="4dp">

        <Button
            android:id="@+id/help_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="20sp"
            android:theme="@style/PrimaryButton"
            android:background="@drawable/circle_button"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:elevation="12dp"/>

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/help_button"
            android:id="@+id/space"
            android:layout_alignParentTop="true"/>

        <ProgressBar
            android:id="@+id/level_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/colorPrimary"
            android:progressTint="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/help_button"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/space"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="30dp"
            android:stateListAnimator="@null"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:background="#00000000"
            android:layout_alignBottom="@+id/level_pb"
            android:layout_alignLeft="@+id/level_pb"
            android:layout_alignRight="@+id/level_pb"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/space"
            android:stateListAnimator="@null"
            android:elevation="10dp"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="50dp"
        android:theme="@+style/PrimaryButton"
        android:background="@drawable/rectangle_rounded_button"
        android:text="@string/new_song"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:elevation="10dp"/>

    <ListView
        android:id="@+id/incomplete_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/completed_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
