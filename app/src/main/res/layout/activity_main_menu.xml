<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.songle.MainMenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:stateListAnimator="@null"
        android:elevation="4dp">

        <Button
            android:id="@+id/help_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="20sp"
            android:textColor="@color/secondaryColor"
            android:theme="@style/PrimaryButton"
            android:background="@drawable/circle_button"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:elevation="14dp"/>

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/help_button"
            android:id="@+id/space"
            android:layout_alignParentTop="true"/>

        <ProgressBar
            android:id="@+id/level_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/help_button"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/space"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@null"
            android:elevation="15dp"/>

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:background="#00000000"
            android:layout_alignBottom="@+id/level_pb"
            android:layout_alignLeft="@+id/level_pb"
            android:layout_alignRight="@+id/level_pb"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/space"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="50dp"
                android:background="@drawable/rounded_rectangular_button"
                android:elevation="10dp"
                android:onClick="newSong"
                android:stateListAnimator="@null"
                android:text="@string/new_song"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:theme="@+style/PrimaryButton" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/incomplete_songs"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/incomplete_song"
                android:textSize="20sp"
                android:elevation="10dp"
                android:stateListAnimator="@null"
                android:background="@drawable/rounded_rectangular_button"
                android:layout_margin="20dp"
                android:theme="@+style/PrimaryButton"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
